<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Kfc.WebApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Kfc.WebApp.styles.css" asp-append-version="true" />
</head>
<style>
    .footer {
        background-color: #202124;
        color: #fff;
        padding: 30px 0 0; /* Giữ padding top, bỏ padding bottom */
    }

    .footer-content {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
        gap: 15px;
        padding: 0 20px; /* Thêm padding cho căn lề */
    }

    .footer-section {
        flex: 1;
        min-width: 200px;
        margin-bottom: 15px;
    }

        .footer-section h3 {
            font-size: 16px;
            margin-bottom: 10px;
            color: #fff;
        }

        .footer-section ul {
            list-style-type: none;
            padding: 0;
            line-height: 1.4;
        }

            .footer-section ul li {
                margin-bottom: 4px;
            }

                .footer-section ul li a {
                    color: #fff;
                    text-decoration: none;
                    font-size: 13px;
                    transition: color 0.3s ease;
                }

                    .footer-section ul li a:hover {
                        color: #e4002b;
                    }

    .copyright {
        text-align: center;
        border-bottom: 1px solid #444;
        font-size: 12px;
        color: #888;
    }

    .company-info {
        max-width: 1200px;
        margin: 0 auto;
        padding: 15px 20px; /* Thêm padding left và right để căn chỉnh với footer-content */
        font-size: 15px;
        color: #ababab;
        text-align: left;
        line-height: 1.4;
    }

        .company-info p {
            margin: 3px 0;
        }

        .company-info strong {
            color: #aaa;
            font-size: 12px;
        }

    }
</style>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <div class="header-left">
                    <a class="header-left-logo">
                            <a asp-area="" asp-controller="Home" asp-action="Index"></a>
                    </a>
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-size: 18px;" asp-area="" asp-controller="Home" asp-action="Index">THỰC ĐƠN</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-size: 18px;" asp-area="" asp-controller="Home" asp-action="Privacy">KHUYẾN MÃI</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-size: 18px;" asp-area="" asp-controller="Home" asp-action="Privacy">DỊCH VỤ TIỆC</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-size: 18px;" asp-area="" asp-controller="Home" asp-action="Privacy">HỆ THỐNG NHÀ HÀNG</a>
                        </li>
                    </ul>
                </div>

                <div class="header-right">
                    <a class="lang-option" href="https://kfcvietnam.com.vn/en/order/delivery/hot-deal">English</a>
                    <a class="lang-option d-none" href="https://kfcvietnam.com.vn/order/delivery/hot-deal">Tiếng Việt</a>
                    <ul class="header-right-icon">
                        <li>
                            <i class="icon-login"></i>
                        </li>
                        
                        <li>
                            <div class="shopping-cart">
                            </div>
                        </li>
                    </ul>
                    <a class="menu-nav">
                        <span></span>
                        <span></span>
                        <span></span>
                    </a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="footer-content">
            <div class="footer-section">
                <h3>Danh Mục Món Ăn</h3>
                <ul>
                    <li><a href="#">Ưu Đãi</a></li>
                    <li><a href="#">Món Mới</a></li>
                    <li><a href="#">Combo 1 Người</a></li>
                    <li><a href="#">Combo Nhóm</a></li>
                    <li><a href="#">Gà Rán - Gà Quay</a></li>
                    <li><a href="#">Burger - Cơm - Mì Ý</a></li>
                    <li><a href="#">Thức Ăn Nhẹ</a></li>
                    <li><a href="#">Thức Uống & Tráng Miệng</a></li>
                </ul>
            </div>
            <div class="footer-section">
                <h3>Về KFC</h3>
                <ul>
                    <li><a href="#">Câu Chuyện Của Chúng Tôi</a></li>
                    <li><a href="#">Tin Khuyến Mãi</a></li>
                    <li><a href="#">Tin tức KFC</a></li>
                    <li><a href="#">Tuyển dụng</a></li>
